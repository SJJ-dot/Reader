<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjianjun.reader.module.script.EditJavaScriptActivity">

    <EditText
        android:id="@+id/base_url"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="top"
        android:hint="@string/script_base_url"
        app:layout_constraintEnd_toStartOf="@+id/save_base_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_base_url"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:text="设置脚本地址"
        app:layout_constraintBottom_toBottomOf="@+id/base_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/base_url" />

    <EditText
        android:id="@+id/script_source"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="top|start"
        android:hint="脚本标识，不能与其他脚本重复"
        android:textColor="@color/material_textBlack_black"
        app:layout_constraintTop_toBottomOf="@id/base_url" />

    <HorizontalScrollView
        android:id="@+id/script_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/save_script"
        app:layout_constraintTop_toBottomOf="@+id/script_source">

        <EditText
            android:id="@+id/script"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:textColor="@color/material_textBlack_black" />
    </HorizontalScrollView>

    <Button
        android:id="@+id/save_script"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="保存脚本"
        android:textColor="@color/material_white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
