<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kcrason.dynamicpagerindicatorlibrary.DynamicPagerIndicator
        android:id="@+id/pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:indicatorLineEndColor="?attr/colorPrimary"
        app:indicatorLineScrollMode="dynamic"
        app:indicatorLineStartColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:pagerIndicatorMode="scrollable"
        app:tabNormalTextColor="@color/day_night_text_color_black_secondary"
        app:tabSelectedTextColor="@color/day_night_bookcity_indicator_selected_text" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager_indicator" />

    <TextView
        android:id="@+id/load_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="30sp"
        tools:text="什么都没有" />

</androidx.constraintlayout.widget.ConstraintLayout>