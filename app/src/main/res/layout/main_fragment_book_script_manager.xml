<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/base_url"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="top"
        android:hint="@string/script_base_url"
        app:layout_constraintEnd_toStartOf="@+id/save_base_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/save_base_url"
        android:layout_width="56dp"
        android:textColor="@color/material_white"
        android:layout_height="0dp"
        android:text="设置脚本地址"
        app:layout_constraintBottom_toBottomOf="@+id/base_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/base_url" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_url" />
</androidx.constraintlayout.widget.ConstraintLayout>