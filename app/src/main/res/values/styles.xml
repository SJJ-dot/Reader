<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="textAppearanceSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2" />


    <style name="Widget.Reader.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/material_reader_white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.Reader.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">

    </style>

    <style name="dialog_button" parent="TextAppearance.MaterialComponents.Headline5" />

    <style name="dialog_style" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="materialButtonStyle">@style/dialog_button</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:secondaryProgressTint">@color/material_reader_black</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_material</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="line">
        <item name="android:background">#a0424242</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">0.5dp</item>
    </style>

    <style name="line.h">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="line.v">
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
